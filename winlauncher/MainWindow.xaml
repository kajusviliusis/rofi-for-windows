<Window x:Class="winlauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinLauncher"
        Width="600"
        Height="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_KeyDown"
        Deactivated="Window_Deactivated"
        Opacity="1"
        FontFamily="Aptos">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Storyboard x:Key="OpenStoryboard">
            <DoubleAnimation Storyboard.TargetName="RootBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.18"/>
            <DoubleAnimation Storyboard.TargetName="RootScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="0.98" To="1"
                             Duration="0:0:0.18">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RootScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="0.98" To="1"
                             Duration="0:0:0.18">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RootTranslate"
                             Storyboard.TargetProperty="Y"
                             From="-6" To="0"
                             Duration="0:0:0.18"/>
            <DoubleAnimation Storyboard.TargetName="ResultsList"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.14"
                             BeginTime="0:0:0.06"/>
            <DoubleAnimation Storyboard.TargetName="ResultsListTranslate"
                             Storyboard.TargetProperty="Y"
                             From="10" To="0"
                             Duration="0:0:0.14"
                             BeginTime="0:0:0.06"/>
        </Storyboard>

        <Storyboard x:Key="CloseStoryboard">
            <DoubleAnimation Storyboard.TargetName="RootBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.12"/>
            <DoubleAnimation Storyboard.TargetName="RootScale"
                             Storyboard.TargetProperty="ScaleX"
                             From="1" To="0.98"
                             Duration="0:0:0.12"/>
            <DoubleAnimation Storyboard.TargetName="RootScale"
                             Storyboard.TargetProperty="ScaleY"
                             From="1" To="0.98"
                             Duration="0:0:0.12"/>
            <DoubleAnimation Storyboard.TargetName="RootTranslate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="-6"
                             Duration="0:0:0.12"/>
            <DoubleAnimation Storyboard.TargetName="ResultsList"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.08"/>
            <DoubleAnimation Storyboard.TargetName="ResultsListTranslate"
                             Storyboard.TargetProperty="Y"
                             From="0" To="6"
                             Duration="0:0:0.08"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="RootBorder"
            CornerRadius="16"
            Background="#1E1E1E"
            SnapsToDevicePixels="True"
            Opacity="0"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="RootScale" ScaleX="0.98" ScaleY="0.98"/>
                <TranslateTransform x:Name="RootTranslate" Y="-6"/>
            </TransformGroup>
        </Border.RenderTransform>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition x:Name="ResultsRow" Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    CornerRadius="8,8,0,0"
                    Background="#222"
                    BorderBrush="#444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Rectangle Grid.Column="0"
                               Width="18"
                               Height="18"
                               Fill="White"
                               VerticalAlignment="Center"
                               Margin="10,0,8,0">
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/search.png" />
                        </Rectangle.OpacityMask>
                    </Rectangle>

                    <TextBox Grid.Column="1"
                             x:Name="SearchBox"
                             FontSize="18"
                             Padding="9,5,0,0"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="CaretBrush" Value="White"/>
                                <Setter Property="BorderBrush" Value="#444"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <TextBlock Text="Search..."
                                                           Foreground="#888"
                                                           Margin="10,5,0,0"
                                                           VerticalAlignment="Center"
                                                           IsHitTestVisible="False"
                                                           Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="CaretBrush" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#888"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Rectangle Width="18"
                                   Height="18"
                                   Fill="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/menu.png" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <Rectangle Width="18"
                                   Height="18"
                                   Fill="White"
                                   VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/setting.png" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="0"
                    Margin="0,48,0,0"
                    Height="1"
                    Background="#333"
                    HorizontalAlignment="Stretch"/>

            <TextBlock x:Name="RecentLabel"
                       Grid.Row="1"
                       Text="recent"
                       Foreground="#777"
                       FontSize="14"
                       Margin="4,0,0,6"
                       Visibility="Collapsed"/>

            <Border Grid.Row="2"
                    MaxHeight="400"
                    CornerRadius="0,0,8,8"
                    Background="#222"
                    BorderBrush="#444"
                    BorderThickness="1">
                <ListBox x:Name="ResultsList"
                         Background="Transparent"
                         BorderThickness="0"
                         Opacity="1"
                         Foreground="White">

                    <ListBox.RenderTransform>
                        <TranslateTransform x:Name="ResultsListTranslate" Y="10"/>
                    </ListBox.RenderTransform>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="OverridesDefaultStyle" Value="True"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder"
                                                Background="Transparent"
                                                CornerRadius="6"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter Margin="4,2"
                                                              HorizontalAlignment="Stretch"
                                                              RecognizesAccessKey="True" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#2261B0F0"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#61B0F0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="#777"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="6">
                                <Image Source="{Binding Icon}"
                                       Width="24"
                                       Height="24"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}"
                                           VerticalAlignment="Center"
                                           FontSize="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=FontSize}"
                                           FontWeight="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=FontWeight}"
                                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="Transparent">
                                            <Track Name="PART_Track">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#61B0F0"
                                                                        CornerRadius="3"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                </ListBox>
            </Border>

        </Grid>
    </Border>
</Window>