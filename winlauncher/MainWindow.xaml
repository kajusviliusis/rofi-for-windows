<Window x:Class="winlauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinLauncher"
        Width="600"
        Height="200"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_KeyDown"
        Deactivated="Window_Deactivated"
        Opacity="0">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <!-- fade-in -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="0:0:0.15"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
    <Border CornerRadius="16"
            Background="#1E1E1E"
            SnapsToDevicePixels="True">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition x:Name="ResultsRow" Height="*"/>
            </Grid.RowDefinitions>
            <!-- search bar -->
            <Border Grid.Row="0"
                    CornerRadius="8,8,0,0"
                    Background="#222"
                    BorderBrush="#444"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- search icon -->
                    <Rectangle Grid.Column="0"
                               Width="18"
                               Height="18"
                               Fill="#777"
                               VerticalAlignment="Center"
                               Margin="10,0,8,0">
                        <Rectangle.OpacityMask>
                            <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/search.png" />
                        </Rectangle.OpacityMask>
                    </Rectangle>

                    <!-- textBox -->
                    <TextBox Grid.Column="1"
                             x:Name="SearchBox"
                             FontSize="20"
                             Padding="8,8,8,8"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="CaretBrush" Value="White"/>
                                <Setter Property="BorderBrush" Value="#444"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                <!-- placeholder -->
                                                <TextBlock Text="Search..."
                                                           Foreground="#666"
                                                           Margin="10,0,0,0"
                                                           VerticalAlignment="Center"
                                                           IsHitTestVisible="False"
                                                           Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="CaretBrush" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#888"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- right icons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Rectangle Width="18"
                                   Height="18"
                                   Fill="#777"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/menu.png" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                        <Rectangle Width="18"
                                   Height="18"
                                   Fill="#777"
                                   VerticalAlignment="Center">
                            <Rectangle.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/setting.png" />
                            </Rectangle.OpacityMask>
                        </Rectangle>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- divide line -->
            <Border Grid.Row="0"
                    Margin="0,48,0,0"
                    Height="1"
                    Background="#333"
                    HorizontalAlignment="Stretch"/>

            <!-- recent -->
            <TextBlock x:Name="RecentLabel"
                       Grid.Row="1"
                       Text="recent"
                       Foreground="#777"
                       FontSize="14"
                       Margin="4,0,0,6"
                       Visibility="Collapsed"/>

            <!-- results list -->
            <Border Grid.Row="2"
                    MaxHeight="400"
                    CornerRadius="0,0,8,8"
                    Background="#222"
                    BorderBrush="#444"
                    BorderThickness="1">
                <ListBox x:Name="ResultsList"
                         Background="Transparent"
                         BorderThickness="0"
                         Opacity="1">

                    <ListBox.RenderTransform>
                        <TranslateTransform Y="10"/>
                    </ListBox.RenderTransform>

                    <!-- fade + slide animation -->
                    <ListBox.Triggers>
                        <EventTrigger RoutedEvent="ListBox.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1"
                                                     Duration="0:0:0.12"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                                     From="10" To="0"
                                                     Duration="0:0:0.12"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ListBox.Triggers>

                    <!-- hover + selection style -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#22000000"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#33000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <!-- item template -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="6">
                                <Image Source="{Binding Icon}"
                                       Width="24"
                                       Height="24"
                                       Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <!-- scroll wheel -->
                    <ListBox.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="Transparent">
                                            <Track Name="PART_Track">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#666"
                                                                        CornerRadius="3"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                </ListBox>
            </Border>

        </Grid>
    </Border>
</Window>